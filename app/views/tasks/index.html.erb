<h1>Welcome to your To Do app:</h1>

<h2>Tasks:</h2>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
    <li><i class="fa-thin fa-cube"></i></i><%= link_to "#{task.title}", "#{task_path(task)}"%> <i class="fa-solid fa-check"></i></li>
    <% else %>
    <li><i class="fa-thin fa-cube"></i></i> <%= link_to "#{task.title}", "#{task_path(task)}" %></li>
    <% end %>
  <% end %>
</ul>
<%= link_to "New task", new_task_path  %>
